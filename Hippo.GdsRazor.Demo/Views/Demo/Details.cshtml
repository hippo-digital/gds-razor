@using Hippo.GdsRazor.Models

@{
    ViewData["Title"] = "Details Demo";
    Layout = "../Layout";
}

<h1 class="govuk-heading-l">Details</h1>
<h2 class="govuk-heading-s">Default:</h2>
<div class="demo">
    @await Html.PartialAsync("GdsDetails", new DetailsModel())
</div>

<h2 class="govuk-heading-s">Customised:</h2>
<div class="demo">
    @await Html.PartialAsync("GdsDetails", new DetailsModel(
        "Help with nationality",
        "We need to know your nationality so we can work out which elections you're entitled to vote in. If you cannot provide your nationality, " +
            "you'll have to send copies of identity documents through the post."
    ))
</div>
