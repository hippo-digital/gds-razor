@using Hippo.GdsRazor.Models

@{
    ViewData["Title"] = "CookieBanner Demo";
    Layout = "../Layout";
}

<h1 class="govuk-heading-l">CookieBanner</h1>
<h2 class="govuk-heading-s">Default:</h2>
<div class="demo">
    @await Html.PartialAsync("GdsCookieBanner", new CookieBannerModel())
</div>

<h2 class="govuk-heading-s">Customised:</h2>
<div class="demo">
    @await Html.PartialAsync("GdsCookieBanner", new CookieBannerModel(
        new CookieBannerModel.MessageModel(
            (HTML) (@<text>
                        <p class="govuk-body">We use some essential cookies to make this service work.</p>
                        <p class="govuk-body">Weâ€™d also like to use analytics cookies so we can understand how you use the service and make improvements.</p>
                     </text>)
        ) {
            Heading = "Cookies on [name of service]",
            Actions = new List<CookieBannerModel.MessageModel.ActionModel>
            {
                new("Accept analytics cookies")
                {
                    Type = "button",
                    Name = "cookies",
                    Value = "accept"
                },
                new("Reject analytics cookies")
                {
                    Type = "button",
                    Name = "cookies",
                    Value = "reject"
                },
                new("View cookies")
                {
                    Href = "#"
                }
            }
        }
    ) {
        AriaLabel = "Cookies on [name of service]",
    })
</div>
