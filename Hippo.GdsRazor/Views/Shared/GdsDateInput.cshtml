@using Hippo.GdsRazor.Models
@model Hippo.GdsRazor.Models.DateInputModel

<div class="govuk-form-group @(Model.ErrorMessage != null ? "govuk-form-group--error" : "") @Model.FormGroupClasses">
  @if (Model.Fieldset != null)
  {
    @await Html.PartialAsync("GdsFieldset", new FieldsetModel
    {
      DescribedBy = Model.DescribedBy,
      Classes = Model.Fieldset.Classes,
      Role = "group",
      Attributes = Model.Fieldset.Attributes,
      Legend = Model.Fieldset.Legend,
      Content = Html.PartialAsync("Internal/GdsDateInputInternal", Model)
    })
  }
  else
  {
    @await Html.PartialAsync("Internal/GdsDateInputInternal", Model)
  }
</div>
